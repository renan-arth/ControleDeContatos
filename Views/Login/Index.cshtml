@model LoginModel
@{
    Layout = "_LayoutLogout";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
<div class="notification-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["MensagemErro"]
</div>
}
<form asp-controller="Login" asp-action="Login" method="post">
    <div class="row col-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="row col-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Password" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="row col-1">
        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
    </div>
</form>