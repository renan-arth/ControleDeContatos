@model UserModel
@{
    ViewData["Title"] = "Confirmação de apagar o usuário";
}


<div class="text-center">
    <h3> Deseja realmente apagar o usuário @Model.Nome?</h3>
</div>

<a class="btn btn-primary" asp-controller="User" asp-action="Index" role="button">Cancelar</a>
<a class="btn btn-secondary" asp-controller="User" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Apagar</a>