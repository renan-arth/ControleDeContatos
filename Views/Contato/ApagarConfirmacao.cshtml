@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}


<div class="" id="ModalApagarConfirmacao" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Deseja realmente apagar o contato</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Nome: @Model.Nome</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>
                <a class="btn btn-secondary" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Apagar</a>
            </div>
        </div>
    </div>
</div>